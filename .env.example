# ============ Discord ============
DISCORD_TOKEN=
DISCORD_APP_ID=
DEV_GUILD_ID=           # test server ID for fast slash-command registration

# ============ Verification (email OTP) ============
# Choose ONE delivery method: SMTP or a provider (SendGrid/Mailgun)

## SMTP (optional for testing, not used with SendGrid)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM="VCU CS Discord <noreply@yourdomain.example>"
SMTP_TLS=true           # true/false

## SendGrid (recommended for testing)
SENDGRID_API_KEY=
SENDGRID_FROM="VCU CS Discord Test <you@example.com>"  # must be verified in SendGrid

## Mailgun (optional, not used with SendGrid)
MAILGUN_API_KEY=
MAILGUN_DOMAIN=
MAILGUN_FROM="VCU CS Discord <noreply@yourdomain.example>"

# ============ Verification policy ============
VERIFY_DOMAIN=          # leave blank to allow all emails during testing
OTP_LENGTH=6
OTP_TTL_SECONDS=900     # 15 minutes
VERIFY_RATE_LIMIT_PER_HOUR=5

# ============ Optional: Postgres (if/when you persist codes) ============
DATABASE_URL=postgres://user:pass@host:5432/dbname

# ============ Logging ============
LOG_LEVEL=info          # debug|info|warn|error
